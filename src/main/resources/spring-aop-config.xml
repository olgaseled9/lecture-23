<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/aop
    http://www.springframework.org/schema/aop/spring-aop-3.0.xsd ">

    <aop:aspectj-autoproxy/>

    <bean id="studentFirst" class="by.itacademy.javaenterprise.seledtsova.Student">
        <constructor-arg index="0" value="Petrov"/>
        <constructor-arg index="1" value="Belarusian State University"/>
        <constructor-arg index="2" value="Faculty of economics"/>
    </bean>
    <bean id="studentSecond" class="by.itacademy.javaenterprise.seledtsova.Student">
        <constructor-arg index="0" value="Ivanov"/>
        <constructor-arg index="1" value="Belarusian National Technical University"/>
        <constructor-arg index="2" value="Faculty of marketing, management, entrepreneurship"/>
    </bean>

    <bean id="logging" class="by.itacademy.javaenterprise.seledtsova.LogAspect"/>
</beans>

